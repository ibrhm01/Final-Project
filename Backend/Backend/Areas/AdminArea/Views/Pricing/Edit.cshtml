@model PricingUpdateVM

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">
                    Update Pricing Form
                </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="form-group">
                            <input asp-for="PricingType" class="form-control" placeholder="PricingType">
                            <span asp-validation-for="PricingType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Price" class="form-control" placeholder="Price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="VideoQuality" class="form-control" placeholder="VideoQuality">
                            <span asp-validation-for="VideoQuality" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Resolution" class="form-control" placeholder="Resolution">
                            <span asp-validation-for="Resolution" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="AmountOfScreens" class="form-control" placeholder="AmountOfScreens">
                            <span asp-validation-for="AmountOfScreens" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Cancel" class="form-control" placeholder="Cancel">
                            <span asp-validation-for="Cancel" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial"></partial>
}
