@using Backend.Helpers
@model Pricing

<style>
    td {
        white-space: pre-wrap !important;
    }
</style>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-contextual">
                    <thead>
                        <tr>
                            <th> Pricing Type </th>
                            <th> Price </th>
                            <th> Video Quality </th>
                            <th> Resolution </th>
                            <th> Amount of Screens </th>
                            <th> Cancel </th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table-color">
                            <td> @Model.PricingType </td>
                            <td> @Model.Price </td>
                            <td> @Model.VideoQuality </td>
                            <td> @Model.Resolution </td>
                            <td> @Model.AmountOfScreens </td>
                            <td> @Model.Cancel </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

