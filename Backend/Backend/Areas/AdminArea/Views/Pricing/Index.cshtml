@using Backend.Helpers
@model PaginationVM<Pricing>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Pricing Table</h4>
            <a asp-controller="Pricing" asp-action="Create" class="btn btn-outline-success">Create Pricing</a>
            <div class="table-responsive">
                <table class="table table-bordered table-contextual">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Pricing Type </th>
                            <th> Price </th>
                            <th> Cancel </th>
                            <th> Settings </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var t = 0;}
                        @foreach (var movie in Model.Items)
                        {
                            t++;
                            <tr class="table-color">
                                <td> @t </td>
                                <td> @movie.PricingType </td>
                                <td> @String.Format("{0:F2}", @movie.Price)</td>
                                <td> @movie.Cancel </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@movie.Id" class="btn btn-outline-primary">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-outline-warning">
                                        <i class="mdi mdi-tooltip-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-outline-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <style>
                .stretch-card .justify-content-center li:not(.disabled) a {
                    color: white;
                }

                    .stretch-card .justify-content-center li:not(.disabled) a:hover {
                        color: black;
                        background-color: white;
                    }

                .table-color {
                    background-color: ##6b757c;
                }
            </style>
            <div class="col-lg-12 d-flex justify-content-center mt-4">
                <nav aria-label="...">
                    <ul class="pagination pagination-md">
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            <li class="page-item @(Model.CurrentPage==i?"disabled":"")">
                                <a class="page-link" asp-action="index" asp-route-page="@i" tabindex="-1">@i</a>
                            </li>
                        }

                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

