@model BannerUpdateVM

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">
                    Update Banner Form
                </p>
                <img src="~/assets/img/banner/@Model.ImageUrl" style="height:200px; width:300px; margin-bottom:30px;" />
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="form-group">
                            <input asp-for="Photo" class="form-control" placeholder="Photo">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Title" class="form-control" placeholder="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Description" class="form-control" placeholder="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Quality" class="form-control" placeholder="Quality">
                            <span asp-validation-for="Quality" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Duration" class="form-control" placeholder="Duration">
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ReleaseDate" class="form-control" placeholder="ReleaseDate">
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="BrandName" class="form-control" placeholder="BrandName">
                            <span asp-validation-for="BrandName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Status" class="form-control" placeholder="Status">
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="TeaserUrl" class="form-control" placeholder="TeaserUrl">
                            <span asp-validation-for="TeaserUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial"></partial>
}
