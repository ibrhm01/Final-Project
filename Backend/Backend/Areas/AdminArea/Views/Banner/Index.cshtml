@using Backend.Helpers
@model Banner
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Banner Table</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-contextual">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Image </th>
                            <th> Title </th>
                            <th> Description </th>
                            <th> Settings </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table-color">
                            <td> 1 </td>
                            <td><img src="~/assets/img/banner/@Model.ImageUrl" style="height:80px; width:80px;" /></td>
                            <td> @Model.Title</td>
                            <td> @Model.Description </td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="mdi mdi-account-card-details"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                                    <i class="mdi mdi-tooltip-edit"></i>
                                </a>

                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

