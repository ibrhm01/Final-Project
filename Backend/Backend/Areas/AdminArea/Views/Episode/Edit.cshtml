@model  EpisodeUpdateVM

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">
                    Update Episode Form
                </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="Episode Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="EpisodeNumber" class="form-control" placeholder="EpisodeNumber">
                            <span asp-validation-for="EpisodeNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select asp-for="SeasonId" asp-items="ViewBag.Seasons" class="form-select form-select-lg mb-3 col-12">
                            </select>
                            <span asp-validation-for="SeasonId" class="text-danger"></span>

                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial"></partial>
}
