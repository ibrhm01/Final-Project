
@model PricingVM
<!-- breadcrumb-area -->
<section class="breadcrumb-area breadcrumb-bg" data-background="assets/img/bg/breadcrumb_bg.jpg" style="background-image: url(&quot;assets/img/bg/breadcrumb_bg.jpg&quot;);">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2 class="title">Our Plan</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Pricing</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb-area-end -->
<!-- pricing-area -->
<section class="pricing-area pricing-bg" data-background="assets/img/bg/pricing_bg.jpg" style="background-image: url(&quot;assets/img/bg/pricing_bg.jpg&quot;);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section-title title-style-three text-center mb-70">
                    <span class="sub-title">our pricing plans</span>
                    <h2 class="title">Our Pricing Strategy</h2>
                </div>
            </div>
        </div>
        <div class="pricing-box-wrap">
            <div class="row justify-content-center">
                @foreach (var pricing in Model.Pricings)
                {
                    <div class="col-lg-4 col-md-6 col-sm-8">
                        <div class="pricing-box-item mb-30">
                            <div class="pricing-top">
                                <h6>@pricing.PricingType</h6>
                                <div class="price">
                                    <h3>$@pricing.Price</h3>
                                    <span>Monthly</span>
                                </div>
                            </div>
                            <div class="pricing-list">
                                <ul>
                                    <li class="quality"><i class="fas fa-check"></i> Video quality <span>@pricing.VideoQuality</span></li>
                                    <li><i class="fas fa-check"></i> Resolution <span>@pricing.Resolution</span></li>
                                    <li><i class="fas fa-check"></i> Screens you can watch <span>@pricing.AmountOfScreens</span></li>
                                    <li>
                                        @if (pricing.Cancel == true)
                                        {<i class="fas fa-check"></i>}
                                        else
                                        {<i class="fa-solid fa-xmark"></i>} Cancel anytime
                                    </li>
                                </ul>
                            </div>


                            <div class="pricing-btn">
                                <a asp-controller="Pricing" asp-action="Subscribe" asp-route-id="@pricing.Id" class="btn">Buy Now</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
<!-- pricing-area-end -->
<!-- newsletter-area -->

@await Html.PartialAsync("_TrialTestPartial", Model.TrialTest)

<!-- newsletter-area-end -->
