@model MovieVM
    <!-- breadcrumb-area -->
<section class="breadcrumb-area breadcrumb-bg" data-background="assets/img/bg/breadcrumb_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2 class="title">Our <span>Movie</span></h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Movie</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb-area-end -->
<!-- movie-area -->
<section class="movie-area movie-bg" data-background="assets/img/bg/movie_bg.jpg">
    <div class="container">
        <div class="row align-items-end mb-60">
            <div class="col-lg-6">
                <div class="section-title text-center text-lg-left">
                    <span class="sub-title">ONLINE STREAMING</span>
                    <h2 class="title">Movies</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="movie-page-meta">
                    <div class="tr-movie-menu-active text-center">



                        <button class="active" data-filter="*">All</button>
                        @foreach (var category in Model.Categories)
                        {
                            <button class="" data-filter=".@category.Name">@category.Name</button>

                        }
                    </div>
                    @*<form action="#" class="movie-filter-form">
                        <select class="custom-select">
                            <option selected>English</option>
                            <option value="1">Blueray</option>
                            <option value="2">4k Movie</option>
                            <option value="3">Hd Movie</option>
                        </select>
                    </form>*@
                </div>
            </div>
        </div>
        <div class="row tr-movie-active">
            @foreach (var movie in Model.Movies)
            {
                <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer @foreach (var movieCategory in movie.MovieCategories) {  @Html.Raw(movieCategory.Category.Name + " ");}">
                    <div class="movie-item movie-item-three mb-50">
                        <div class="movie-poster">
                            <img src="assets/img/poster/@movie.ImageUrl" alt="">
                            <ul class="overlay-btn">
                                <li class="rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </li>
                                <li><a href="https://www.youtube.com/watch?v=R2gbPxeNk2E" class="popup-video btn">Watch Now</a></li>
                                <li><a asp-action="Detail" asp-route-id="@movie.Id" class="btn">Details</a></li>
                            </ul>
                        </div>
                        <div class="movie-content">
                            <div class="top">
                                <h5 class="title"><a asp-action="Detail" asp-route-id="@movie.Id">@movie.Name</a></h5>
                                <span class="date">@movie.ReleaseDate.ToString("yyyy")</span>
                            </div>
                            <div class="bottom">
                                <ul>
                                    <li><span class="quality">@movie.Quality</span></li>
                                    <li>
                                        <span class="duration"><i class="far fa-clock"></i> @movie.Duration min</span>
                                        <span class="rating"><i class="fas fa-thumbs-up"></i> @movie.Point</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
</section>
<!-- movie-area-end -->
<!-- newsletter-area -->
@await Html.PartialAsync("_TrialTestPartial", Model.TrialTest)

<!-- newsletter-area-end -->
