                            <a href="movie-details.html"><img src="~/assets/img/poster/@bestSeries.ImageUrl" alt=""></a>
                        </div>
                        <div class="movie-content">
                            <div class="top">
                                <h5 class="title"><a href="movie-details.html">@bestSeries.Name</a></h5>
                                <span class="date">@bestSeries.ReleaseDate.ToString("yyyy")</span>
                            </div>
                            <div class="bottom">
                                <ul>
                                    <li><span class="quality">@bestSeries.Quality</span></li>
                                    <li>
                                        <span class="duration"><i class="far fa-clock"></i> @bestSeries.Duration min</span>
                                        <span class="rating"><i class="fas fa-thumbs-up"></i> @bestSeries.Point</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- tv-series-area-end -->
