@model ForgotPasswordVM

<div class="login-area pt-150 pb-150" data-background="../assets/img/bg/episode_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                        </div>
                        <div class="login-form">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <form asp-controller="Account" asp-action="ForgotPassword" method="post">

                                <div class="form-group">
                                    <input asp-for="Email" type="email" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="button-box">

                                    <button type="submit" class="default-btn">Send</button>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial"></partial>
}