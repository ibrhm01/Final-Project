@model ResetPasswordVM

<div class="login-area pt-150 pb-150" data-background="../assets/img/bg/episode_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                        </div>
                        <div class="login-form">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <form method="post">

                                <div class="form-group">
                                    <input asp-for="Password" type="password" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <input type="hidden" asp-for="Token" value="@Model.Token" />
                                <input type="hidden" asp-for="UserId" value="@Model.UserId" />

                                <div class="button-box">

                                    <button type="submit" class="default-btn">Reset</button>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial"></partial>
}